<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!--    untuk : item master produk-->
    <androidx.cardview.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:cardElevation="1.5dp"
        app:cardCornerRadius="2dp"
        app:cardBackgroundColor="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">

            <TextView
                android:id="@+id/txtProduk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Produk"
                android:textSize="17sp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="5dp"
                android:paddingLeft="7dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_weight="1"
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="7dp">

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/LKode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Kode"
                            android:fontFamily="sans-serif-medium"
                            android:textSize="14sp"/>

                        <TextView
                            android:id="@+id/LHargaBeli"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Harga Awal"
                            android:fontFamily="sans-serif-medium"
                            android:textSize="14sp"/>

                        <TextView
                            android:id="@+id/LHargaJual"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Harga Jual"
                            android:fontFamily="sans-serif-medium"
                            android:textSize="14sp"/>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtKode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="12"
                            android:textAlignment="textEnd"
                            android:textSize="14sp"/>

                        <TextView
                            android:id="@+id/txtHargaBeli"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="10000"
                            android:textAlignment="textEnd"
                            android:textSize="14sp"/>

                        <TextView
                            android:id="@+id/txtHargaJual"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="20000"
                            android:textAlignment="textEnd"
                            android:textSize="14sp"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="0dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp">

                    <TextView
                        android:id="@+id/txtEdit"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Edit"
                        android:textStyle="bold"
                        android:textSize="13sp"
                        android:textColor="@color/success"
                        android:textAlignment="textEnd"
                        android:layout_marginRight="7dp"/>
                    <TextView
                        android:id="@+id/txtHapus"
                        android:layout_weight="2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Hapus"
                        android:textStyle="bold"
                        android:textSize="13sp"
                        android:textColor="@color/error"
                        android:textAlignment="center"/>
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.appcompat.widget.LinearLayoutCompat>