<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.home.bottom_nav.Payment">

    <LinearLayout
        android:id="@+id/viewTotal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="4"
        android:layout_weight="1"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/white">

        <TextView
            android:id="@+id/tcBack"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="18dp"
            android:layout_weight="1"
            android:fontFamily="sans-serif-medium"
            android:text="Back"
            android:textAlignment="textStart"
            android:textColor="@color/teal_700"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textviewtotal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="18dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:fontFamily="sans-serif-black"
            android:text="Rp."
            android:textSize="18sp"
            android:textAlignment="textEnd"
            android:textColor="@color/teal_700" />

        <TextView
            android:id="@+id/tvTotal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="18dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:fontFamily="sans-serif-black"
            android:textAlignment="textStart"
            android:text="0"
            android:textColor="@color/teal_700"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvNext"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="18dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:enabled="false"
            android:fontFamily="sans-serif-medium"
            android:text="Ok"
            android:textAlignment="textEnd"
            android:textColor="@color/darkgrey"
            android:textSize="20sp" />

    </LinearLayout>

<!--    inputan bayar-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="3">

        <TextView
            android:id="@+id/tvRp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="65dp"
            android:layout_weight="1"
            android:paddingRight="10dp"
            android:text="Rp."
            android:textAlignment="textEnd"
            android:textColor="@color/darkgrey"
            android:textSize="45sp" />
        <TextView
            android:id="@+id/inBayar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="65dp"
            android:paddingRight="30dp"
            android:layout_weight="1"
            android:textColor="@color/darkgrey"
            android:text="0"
            android:textAlignment="textStart"
            android:textSize="45sp"
            />

    </LinearLayout>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/txtSeven"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/darkergrey"
                android:text="7"
                android:background="@null"
                android:textSize="25sp"
                />

            <Button
                android:id="@+id/txtEight"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:text="8"
                android:textColor="@color/darkergrey"
                android:textSize="25sp" />
            <Button
                android:id="@+id/txtNine"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/darkergrey"
                android:text="9"
                android:background="@null"
                android:textSize="25sp"
                />
            <Button
                android:id="@+id/clearAll"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/teal_700"
                android:text="C"
                android:background="@null"
                android:textSize="25sp"
                />
        </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/txtFour"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/darkergrey"
                android:text="4"
                android:background="@null"
                android:textSize="25sp"
                />

            <Button
                android:id="@+id/txtFive"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/darkergrey"
                android:text="5"
                android:background="@null"
                android:textSize="25sp"
                />
            <Button
                android:id="@+id/txtSix"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/darkergrey"
                android:text="6"
                android:background="@null"
                android:textSize="25sp"
                />
            <Button
                android:id="@+id/clear"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/darkergrey"
                android:background="@null"
                android:textSize="25sp"
                android:text="del"
                />
        </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/txtOne"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/darkergrey"
                android:text="1"
                android:background="@null"
                android:textSize="25sp"
                />

            <Button
                android:id="@+id/txtTwo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/darkergrey"
                android:text="2"
                android:background="@null"
                android:textSize="25sp"
                />
            <Button
                android:id="@+id/txtThree"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/darkergrey"
                android:text="3"
                android:background="@null"
                android:textSize="25sp"
                />
            <Button
                android:id="@+id/blankView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/darkergrey"
                android:background="@null"
                android:textSize="25sp"
                android:text=""
                />
        </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/txtZero"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/darkergrey"
                android:text="0"
                android:background="@null"
                android:textSize="25sp"
                />

            <Button
                android:id="@+id/txtTripleZero"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/darkergrey"
                android:text="000"
                android:background="@null"
                android:textSize="25sp"
                />
            <Button
                android:id="@+id/txtPoint"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/darkergrey"
                android:text="."
                android:background="@null"
                android:textSize="25sp"
                />
        </LinearLayout>


</androidx.appcompat.widget.LinearLayoutCompat>


