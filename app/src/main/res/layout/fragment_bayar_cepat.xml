<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/txtPas"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:text="Uang Pas"
            android:onClick="txtPas"
            android:background="@color/teal_700"
            android:textSize="25sp"
            android:layout_margin="8dp"
            />

        <Button
            android:id="@+id/txtTwenty"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/teal_700"
            android:text="20.000"
            android:onClick="txtTwenty"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:layout_margin="8dp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/txtFifty"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:text="50.000"
            android:onClick="txtFifty"
            android:background="@color/teal_700"
            android:textSize="25sp"
            android:layout_margin="8dp"
            />

        <Button
            android:id="@+id/txtHundret"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:text="100.000"
            android:onClick="txtFifty"
            android:background="@color/teal_700"
            android:textSize="25sp"
            android:layout_margin="8dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/txtOther"
            android:layout_margin="8dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:text="Lainnya"
            android:onClick="txtOther"
            android:background="@color/teal_700"
            android:textSize="25sp"
            />

    </LinearLayout>



</LinearLayout>


